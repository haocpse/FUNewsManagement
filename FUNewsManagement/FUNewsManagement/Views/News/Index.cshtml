@model FuNews.Modals.DTOs.Response.Paging.PageResult<FuNews.Modals.DTOs.Response.News.NewsResponse>

@{
    ViewData["Title"] = "News Articles List";
}

<h2 class="mb-3">Your News</h2>

<button class="btn btn-primary mb-3" onclick="openPopup('/News/Create')">+ Create New</button>

@{
    var currentStatus = Context.Request.Query["status"].ToString()?.ToLower(); // "true", "false", hoặc ""
}

<div class="mb-4 text-center">
    <div class="btn-group me-2" role="group">
        <a class="btn btn-outline-success @(string.IsNullOrEmpty(currentStatus) ? "active" : "")"
           href="@Url.Action("Index", new { status = (bool?)null, categoryId = Context.Request.Query["categoryId"], pageNumber = 1 })">All</a>
        <a class="btn btn-outline-success @(currentStatus == "true" ? "active" : "")"
           href="@Url.Action("Index", new { status = true, categoryId = Context.Request.Query["categoryId"], pageNumber = 1 })">Approved</a>
        <a class="btn btn-outline-success @(currentStatus == "false" ? "active" : "")"
           href="@Url.Action("Index", new { status = false, categoryId = Context.Request.Query["categoryId"], pageNumber = 1 })">Pending</a>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Number</th>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Category</th>
            <th>Status</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    @{
        int stt = (Model.PageNumber - 1) * Model.PageSize + 1;
    }
    <tbody>
        @foreach (var item in Model.Items)
        {
            <tr>
                <td>@stt</td>
                <td>@item.NewsTitle</td>
                <td>@item.Headline</td>
                <td>@item.Category?.CategoryName</td>
                <td>@(item.NewsStatus == true ? "Approved" : "Pending")</td>
                <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                <td class="d-flex gap-2">
                    <button class="btn btn-sm btn-warning" onclick="openPopup('/News/Update/@item.NewsArticleId')">Edit</button>
                    <button class="btn btn-sm btn-danger" onclick="confirmDelete('@item.NewsArticleId')">Delete</button>
                </td>
            </tr>
            stt++;
        }
    </tbody>
</table>

<nav aria-label="Page navigation" class="mt-4">
    <ul class="pagination justify-content-center">
        @{
            var totalPages = (int)Math.Ceiling((double)Model.TotalItems / Model.PageSize);
            var currentPage = Model.PageNumber;
            var categoryId = Context.Request.Query["categoryId"];
        }

        <li class="page-item @(currentPage == 1 ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", new { pageNumber = currentPage - 1, categoryId })">Previous</a>
        </li>

        @for (int i = 1; i <= totalPages; i++)
        {
            <li class="page-item @(i == currentPage ? "active" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, categoryId })">@i</a>
            </li>
        }

        <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
            <a class="page-link" href="@Url.Action("Index", new { pageNumber = currentPage + 1, categoryId })">Next</a>
        </li>
    </ul>
</nav>

<!-- Modal for displaying popup form -->
<div class="modal fade" id="newsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modalContent"></div>
    </div>
</div>

@section Scripts {
    <script>
        function openPopup(url) {
            $.get(url, function (data) {
                $("#modalContent").html(data);
                $("#newsModal").modal("show");
            });
        }

        function confirmDelete(id) {
            if (confirm("Are you sure you want to delete this article?")) {
                $.post("/News/Delete", { id: id }, function (result) {
                    if (result.success) {
                        location.reload();
                    }
                });
            }
        }

        // Handle submit events from any #newsForm (includes Create/Edit)
        $(document).on('submit', '#newsForm', function (e) {
            e.preventDefault();

            $.ajax({
                type: "POST",
                url: $(this).attr("action"),
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        $("#newsModal").modal("hide");
                        location.reload(); // reload news list
                    } else {
                        // re-render partial view if validation errors
                        $("#modalContent").html(response);
                    }
                }
            });
        });
    </script>
}