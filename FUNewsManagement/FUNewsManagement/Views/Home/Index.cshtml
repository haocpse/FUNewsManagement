@model FuNews.Modals.DTOs.Response.Paging.PageResult<FuNews.Modals.DTOs.Response.News.NewsResponse>
@{
    ViewData["Title"] = "News Articles Overview";
}

<style>
    .card-hover:hover {
        border-color: #0d6efd !important;
        box-shadow: 0 6px 20px rgba(13,110,253,0.2);
        transform: translateY(-3px);
    }

    .truncate-text {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>

<div class="container py-5">
    <h2 class="mb-5 text-center text-primary fw-bold">📰 FPT University News</h2>

    <div class="mb-4 text-center">
        <div class="btn-group" role="group">
            <a class="btn btn-outline-primary @(string.IsNullOrEmpty(Context.Request.Query["categoryId"]) ? "active" : "")" href="@Url.Action("Index", new { categoryId = (short?)null })">All</a>
            @foreach (var cat in (List<FUNews.Modals.DTOs.Response.CategoryResponse>)ViewBag.Categories)
            {
                <a class="btn btn-outline-primary @(Context.Request.Query["categoryId"] == cat.CategoryId.ToString() ? "active" : "")"
                   href="@Url.Action("Index", new { categoryId = cat.CategoryId })">@cat.CategoryName</a>
            }
        </div>
    </div>

    @foreach (var news in Model.Items)
    {
        <div class="card w-100 mb-4 border border-2 border-light shadow-sm card-hover">
            <div class="card-body">
                <h5 class="card-title text-primary fw-bold">
                    <a href="/News/Details/@news.NewsArticleId" class="text-decoration-none text-primary">
                        @news.NewsTitle
                    </a>
                </h5>

                <p class="card-text text-secondary truncate-text">
                    @news.NewsContent?.Substring(0, Math.Min(150, news.NewsContent.Length))...
                </p>

                <p class="mb-1">
                    <strong>Category:</strong>
                    <span class="badge bg-info text-dark">@news.Category?.CategoryName</span>
                </p>

                <p class="mb-1">
                    <strong>Tags:</strong>
                    @if (news.Tags != null && news.Tags.Any())
                    {
                        @foreach (var tag in news.Tags)
                        {
                            <span class="badge bg-success me-1">@tag.TagName</span>
                        }
                    }
                    else
                    {
                        <span class="text-muted">None</span>
                    }
                </p>

                <div class="text-muted small">
                    <strong>Source:</strong> @(!string.IsNullOrWhiteSpace(news.NewsSource) ? news.NewsSource : "N/A") <br />
                    <strong>Author:</strong> @(!string.IsNullOrWhiteSpace(news.AccountName) ? news.AccountName : "N/A") <br />
                    <strong>Date:</strong> @news.CreatedDate?.ToString("dd/MM/yyyy")
                </div>
            </div>
        </div>
    }

    <!-- Pagination -->
    <nav class="mt-5">
        <ul class="pagination justify-content-center">
            @{
                var totalPages = (int)Math.Ceiling((double)Model.TotalItems / Model.PageSize);
                var currentPage = Model.PageNumber;
                var categoryId = Context.Request.Query["categoryId"];
            }

            <li class="page-item @(currentPage == 1 ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pageNumber = currentPage - 1, categoryId })">Previous</a>
            </li>

            @for (int i = 1; i <= totalPages; i++)
            {
                <li class="page-item @(i == currentPage ? "active" : "")">
                    <a class="page-link" href="@Url.Action("Index", new { pageNumber = i, categoryId })">@i</a>
                </li>
            }

            <li class="page-item @(currentPage == totalPages ? "disabled" : "")">
                <a class="page-link" href="@Url.Action("Index", new { pageNumber = currentPage + 1, categoryId })">Next</a>
            </li>
        </ul>
    </nav>
</div>