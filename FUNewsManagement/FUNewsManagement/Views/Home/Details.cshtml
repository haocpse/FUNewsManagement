@model FuNews.Modals.DTOs.Response.News.NewsResponse

<div class="container py-4">
    <h2 class="mb-4 text-center text-primary">@(string.IsNullOrWhiteSpace(Model.Headline) ? Model.NewsTitle : Model.Headline)</h2>

    <div class="card shadow border-0 rounded-4">
        <div class="card-body">
            <div class="d-flex justify-content-between text-muted mb-3">
                <div>
                    <strong>Category:</strong> <span class="badge bg-info">@Model.Category?.CategoryName</span>
                </div>
                <div>
                    <strong>Date:</strong> @(Model.CreatedDate?.ToString("dd/MM/yyyy") ?? "Unknown")
                </div>
            </div>
            @if (Model.Tags != null && Model.Tags.Any())
            {
                <div class="mb-2">
                    <strong>Tags:</strong>
                    @foreach (var tag in Model.Tags)
                    {
                        <span class="badge bg-secondary me-1">@tag.TagName</span>
                    }
                </div>
            }
            <p><strong>Source:</strong> @(!string.IsNullOrWhiteSpace(Model.NewsSource) ? Model.NewsSource : "N/A")</p>
            <hr />

            <div class="mb-4">
                @Model.NewsContent
            </div>
            <div class="d-flex justify-content-between text-muted mb-3">
                <div>

                </div>
                <div>
                    <strong>Author:</strong> @(!string.IsNullOrWhiteSpace(Model.AccountName) ? Model.AccountName : "N/A")
                </div>
            </div>
            <a asp-action="Index" class="btn btn-outline-secondary mt-3">← Back to List</a>
        </div>
    </div>
</div>