@model List<FuNews.Modals.DTOs.Response.News.NewsResponse>

@{
    ViewData["Title"] = "Approve Articles";
}

<h2 class="mb-3">Approve News Articles</h2>

<table class="table table-bordered table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Title</th>
            <th>Subtitle</th>
            <th>Category</th>
            <th>Status</th>
            <th>Created Date</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NewsTitle</td>
                <td>@item.Headline</td>
                <td>@item.Category?.CategoryName</td>
                <td>
                    @if (item.NewsStatus == true)
                    {
                        <span class="text-success">Approved</span>
                    }
                    else
                    {
                        <span class="text-warning">Pending</span>
                    }
                </td>
                <td>@item.CreatedDate?.ToString("dd/MM/yyyy")</td>
                <td>
                    <button class="btn btn-sm btn-info" onclick="openPopup('/News/Details/@item.NewsArticleId')">View</button>

                    @if (item.NewsStatus == false)
                    {
                        <button class="btn btn-sm btn-success" onclick="approveNews('@item.NewsArticleId')">Approve</button>
                    }

                    <button class="btn btn-sm btn-danger" onclick="confirmDelete('@item.NewsArticleId')">Delete</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Modal for displaying article details -->
<div class="modal fade" id="newsModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content" id="modalContent"></div>
    </div>
</div>

@section Scripts {
    <script>
        function openPopup(url) {
            $.get(url, function (data) {
                $("#modalContent").html(data);
                $("#newsModal").modal("show");
            });
        }

        function confirmDelete(id) {
            if (confirm("Are you sure you want to delete this article?")) {
                $.post("/News/Delete", { id: id }, function (result) {
                    if (result.success) {
                        location.reload();
                    }
                });
            }
        }

        function approveNews(id) {
            if (confirm("Are you sure you want to approve this article?")) {
                $.post("/News/Approve", { id: id }, function (result) {
                    if (result.success) {
                        location.reload();
                    } else {
                        alert("An error occurred while approving the article.");
                    }
                });
            }
        }
    </script>
}