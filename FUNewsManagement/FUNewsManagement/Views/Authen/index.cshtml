@model FuNews.Modals.DTOs.Request.LoginRequest

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">System Login</h2>
    @if (TempData["LoginSuccess"] != null && User.Identity?.IsAuthenticated == true)
    {
        <div class="alert alert-success">
            @TempData["LoginSuccess"]
        </div>
    }

    <form asp-action="Authen" method="post">
        <div class="form-group mb-3">
            <label asp-for="AccountEmail" class="form-label">Email</label>
            <input asp-for="AccountEmail" class="form-control" placeholder="Enter your email..." />
            <span asp-validation-for="AccountEmail" class="text-danger"></span>
        </div>

        <div class="form-group mb-3">
            <label asp-for="AccountPassword" class="form-label">Password</label>
            <input asp-for="AccountPassword" class="form-control" placeholder="Enter your password..." type="password" />
            <span asp-validation-for="AccountPassword" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Login</button>
    </form>

    <div class="text-danger mt-3">
        @Html.ValidationSummary()
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
