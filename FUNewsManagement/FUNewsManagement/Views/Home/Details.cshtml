@model FuNews.Modals.DTOs.Response.News.NewsResponse
@{
    ViewData["Title"] = "News Article Details";
}

<div class="container py-4">
    <h2 class="mb-4 text-center text-primary">News Article Details</h2>

    <div class="card shadow border-0 rounded-4">
        <div class="card-body">
            <h3 class="card-title text-primary fw-bold mb-3">
                @(string.IsNullOrWhiteSpace(Model.Headline) ? Model.NewsTitle : Model.Headline)
            </h3>

            <h5 class="card-subtitle mb-3 text-muted">
                Title: @Model.NewsTitle
            </h5>

            <p class="card-text mb-4">
                <strong>Content:</strong><br />
                @Model.NewsContent
            </p>

            <p><strong>Source:</strong> @(!string.IsNullOrWhiteSpace(Model.NewsSource) ? Model.NewsSource : "N/A")</p>

            <p>
                <strong>Category:</strong>
                <span class="badge bg-info text-dark">@Model.Category?.CategoryName</span>
            </p>

            <p>
                <strong>Tags:</strong>
                @if (Model.Tags != null && Model.Tags.Any())
                {
                    foreach (var tag in Model.Tags)
                    {
                        <span class="badge bg-secondary me-1">@tag.TagName</span>
                    }
                }
                else
                {
                    <span class="text-muted">None</span>
                }
            </p>

            <p><strong>Created Date:</strong> @(Model.CreatedDate?.ToString("dd/MM/yyyy") ?? "Unknown")</p>

            <p>
                <strong>Status:</strong>
                @if (Model.NewsStatus == true)
                {
                    <span class="badge bg-success">Published</span>
                }
                else if (Model.NewsStatus == false)
                {
                    <span class="badge bg-danger">Hidden</span>
                }
                else
                {
                    <span class="badge bg-secondary">Unknown</span>
                }
            </p>

            <a asp-action="Index" class="btn btn-outline-secondary mt-3">← Back to List</a>
        </div>
    </div>
</div>