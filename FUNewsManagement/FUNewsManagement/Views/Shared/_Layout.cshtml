@using System.Security.Claims

<!DOCTYPE html>
<html lang="en">
<head>

    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - FUNewsManagement</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/FUNewsManagement.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

    <!-- Thêm dòng này để render Styles section -->
    @RenderSection("Styles", required: false)
</head>
<body>
<header>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">FU News</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent"
                    aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    @{
                        var isAuthenticated = User.Identity.IsAuthenticated;
                        var role = User.FindFirst(ClaimTypes.Role)?.Value;
                        var userName = User.Identity?.Name ?? "Guest";
                    }

                    <!-- NAVIGATION BÊN TRÁI -->
                    <ul class="navbar-nav">
                        @if (isAuthenticated && role == "3")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="adminDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Admin Panel
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                                    <li><a class="dropdown-item" asp-controller="Category" asp-action="Index">Categories</a></li>
                                    <li><a class="dropdown-item" asp-controller="Tag" asp-action="Index">Tags</a></li>
                                    <li><a class="dropdown-item" asp-controller="News" asp-action="Approve">Approve News</a></li>
                                    <li><a class="dropdown-item" asp-controller="News" asp-action="Index">Manage News</a></li>
                                    <li><a class="dropdown-item" asp-controller="Report" asp-action="ArticleReport">Report</a></li>
                                </ul>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="SystemAccount" asp-action="AccountList">Manage account</a>
                            </li>
                        }

                        @if (isAuthenticated && role == "1")
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="managementDropdown" role="button"
                                   data-bs-toggle="dropdown" aria-expanded="false">
                                    Management
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="managementDropdown">
                                    <li><a class="dropdown-item" asp-controller="SystemAccount" asp-action="UserProfile">User Profile</a></li>
                                    <li><a class="dropdown-item" asp-controller="News" asp-action="Index">News</a></li>
                                </ul>
                            </li>
                        }
                    </ul>

                    <!-- LOGIN HOẶC WELCOME BÊN PHẢI -->
                    <div class="d-flex align-items-center ms-auto">
                        @if (!isAuthenticated)
                        {
                            <a class="nav-link text-dark" asp-controller="Authen" asp-action="Index">
                                <i class="fas fa-sign-in-alt me-1"></i> Login
                            </a>
                        }
                        else
                        {
                            <span class="me-3 text-muted small">
                                👋 Welcome, <strong>@userName</strong>
                                (Role:
                                @switch (role)
                                {
                                    case "1":
                                        @:Staff
                                        break;
                                    case "2":
                                        @:User
                                        break;
                                    case "3":
                                        @:Admin
                                        break;
                                    default:
                                        @:Unknown
                                        break;
                                })
                            </span>
                            <form asp-controller="Authen" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-link nav-link text-dark">Logout</button>
                            </form>
                        }
                    </div>
                </div>
        </div>
    </nav>
</header>
<div class="container">
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
</div>
	<footer class="border-top footer text-muted">
		<div class="container">
			&copy; 2025 - FU News - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
