@model FuNews.Modals.DTOs.Response.Category.CategoryTreeViewModel

<li>
    <div class="category-node">
        @if (Model.Children.Any())
        {
            <div class="category-toggle">
                <i class="fas fa-chevron-down"></i>
            </div>
        }
        else
        {
            <div style="width: 16px; display: inline-block;"></div>
        }

        <i class="fas fa-folder-open category-icon"></i>
        
        <span class="@(Model.IsActive ? "" : "inactive")">
            @Model.CategoryName
        </span>
        
        <div class="category-actions">
            <button type="button"
                    class="btn btn-sm btn-link text-primary p-0 open-edit-modal"
                    data-id="@Model.CategoryId"
                    data-name="@Model.CategoryName"
                    title="Edit">
                <i class="fas fa-edit"></i>
            </button>
            <button type="button" 
                    class="btn btn-sm btn-link text-success p-0 open-create-modal" 
                    data-parentid="@Model.CategoryId" 
                    data-parentname="@Model.CategoryName" 
                    title="Add Subcategory">
                <i class="fas fa-plus"></i>
            </button>
            <button type="button" 
                    class="btn btn-sm btn-link text-danger p-0 open-delete-modal" 
                    data-id="@Model.CategoryId" 
                    data-name="@Model.CategoryName"
                    title="Delete">
                <i class="fas fa-trash"></i>
            </button>
        </div>
    </div>
    
    @if (Model.Children.Any())
    {
        <ul>
            @foreach (var childCategory in Model.Children)
            {
                @await Html.PartialAsync("CategoryTreeItem", childCategory)
            }
        </ul>
    }
</li>