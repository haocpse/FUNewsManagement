@model FuNews.Modals.DTOs.Request.News.NewsRequest 

<form asp-action="Create" method="post" id="newsForm">
    <div class="form-group">
        <label>Tiêu đề</label>
        <input asp-for="NewsTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tiêu đề phụ</label>
        <textarea asp-for="Headline" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Nội dung</label>
        <textarea asp-for="NewsContent" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Nguồn</label>
        <input asp-for="NewsSource" class="form-control" />
    </div>
    <div class="form-group">
        <label>Danh mục</label><br />
        @foreach (var category in (List<SelectListItem>)ViewBag.Categories)
        {
            <div class="form-check form-check-inline">
                <input class="form-check-input"
                       type="radio"
                       name="CategoryId"
                       value="@category.Value"
                @(Model.CategoryId.ToString() == category.Value ? "checked" : "") />
                <label class="form-check-label">@category.Text</label>
            </div>
        }
    </div>
    <div class="form-group">
        <label>Tags</label><br />
        @foreach (var tag in (List<SelectListItem>)ViewBag.Tags)
        {
            <div class="form-check form-check-inline">
                <input class="form-check-input"
                       type="checkbox"
                       name="TagIds"
                       value="@tag.Value"
                @(Model.TagIds != null && Model.TagIds.Contains(short.Parse(tag.Value)) ? "checked" : "") />
                <label class="form-check-label">@tag.Text</label>
            </div>
        }
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
</form>

@section Scripts {
    <script>
        $("#newsForm").submit(function (e) {
            e.preventDefault();
            $.ajax({
                type: "POST",
                url: $(this).attr("action"),
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        $("#newsModal").modal("hide");
                        location.reload(); // Tải lại danh sách sau khi tạo
                    } else {
                        // Xử lý lỗi nếu có
                        $("#modalContent").html(response); // hiển thị lại form nếu có lỗi
                    }
                }
            });
        });
    </script>
}