@model FuNews.Modals.DTOs.Request.News.NewsRequest 

<form asp-action="Create" method="post" id="newsForm">
    <div class="form-group">
        <label>Tiêu đề</label>
        <input asp-for="NewsTitle" class="form-control" />
    </div>
    <div class="form-group">
        <label>Tiêu đề phụ</label>
        <textarea asp-for="Headline" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Nội dung</label>
        <textarea asp-for="NewsContent" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label>Nguồn</label>
        <input asp-for="NewsSource" class="form-control" />
    </div>
    <div class="form-group">
        <label>Danh mục</label>
        <select asp-for="CategoryId" class="form-control" asp-items="ViewBag.Categories"></select>
    </div>
    <div class="form-group">
        <label>Tags</label>
        <select asp-for="TagIds" class="form-control" multiple asp-items="ViewBag.Tags"></select>
    </div>
    <button type="submit" class="btn btn-success">Lưu</button>
</form>

@section Scripts {
    <script>
        $("#newsForm").submit(function (e) {
            e.preventDefault();
            $.ajax({
                type: "POST",
                url: $(this).attr("action"),
                data: $(this).serialize(),
                success: function (response) {
                    if (response.success) {
                        $("#newsModal").modal("hide");
                        location.reload(); // Tải lại danh sách sau khi tạo
                    } else {
                        // Xử lý lỗi nếu có
                        $("#modalContent").html(response); // hiển thị lại form nếu có lỗi
                    }
                }
            });
        });
    </script>
}